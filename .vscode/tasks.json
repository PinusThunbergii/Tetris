{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run debug",
            "type": "shell",
            "command": "cocos run --proj-dir ./ -p linux --mode debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build and run release",
            "type": "shell",
            "command": "cocos run --proj-dir ./ -p linux --mode release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "test env var",
            "type": "shell",
            "command": "cat ~/.bashrc; export; whereis cocos; whoami",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}